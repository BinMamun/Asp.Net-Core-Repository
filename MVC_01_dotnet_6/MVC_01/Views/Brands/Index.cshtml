@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="display-6 text-center">Articles</div>
    <hr />
    <div class="d-flex justify-content-end mb-1">
        <a asp-controller="Articles" asp-action="Create" class="btn btn-success btn-sm bi bi-plus-lg" title="add new">Add New</a>
    </div>
    <table class="table table-borderless">
        <thead class="table-success">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(x => x.BrandName)</th>
                <th>@Html.DisplayNameFor(x => x.Origin)</th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody class="table-light">

            @foreach (var b in Model)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(x=> b.BrandName)</td>
                    <td>@Html.DisplayFor(x=> b.Origin)</td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


