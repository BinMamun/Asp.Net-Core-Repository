@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="mt-3">
    <span class="fs-4 text-white">Employee List</span>
    <hr/>
    <div class="d-flex justify-content-end">
    <a asp-controller="Employees" asp-action="Create" title="add new" class="btn btn-sm btn-warning mb-1">
        <span class="bi bi-plus-lg"></span></a>
    </div>
    <table class="table table-responsive shadow-sm">
        <thead class="table-warning">
            <tr>
                <th>@Html.DisplayNameFor(x=> x.EmployeeName)</th>
                <th>@Html.DisplayNameFor(x=> x.JoinDate)</th>
                <th>@Html.DisplayNameFor(x=> x.Contact)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var e in Model)
            {
                <tr>
                    <td>@e.EmployeeName</td>
                    <td>@e.JoinDate.ToShortDateString()</td>
                    <td>@e.Contact</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                        <a asp-controller="Employees" asp-action="Delete" asp-route-id="@e.EmployeeId" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

