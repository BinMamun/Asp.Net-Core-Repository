@model Employee
@{
    ViewData["Title"] = "Edit";
}

<div class="mt-3">
    <span class="fs-4">Edit Employee</span>
    <hr />
    <div class=" d-flex justify-content-end">
        <a asp-controller="Employees" asp-action="Index" class="btn btn-sm btn-outline-warning text-dark">Back</a>
    </div>
    <form method="post" asp-controller="Employees" asp-action="Edit" class="mt-5" asp-route-EmployeeId="@Model.EmployeeId">
        <div class="row mb-2">
            <label asp-for="EmployeeName" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-4">
                <input asp-for="EmployeeName" class="form-control" type="text" />
            </div>
            <span asp-validation-for="EmployeeName" class="text-danger col-3"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="JoinDate" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-4">
                <input asp-for="JoinDate" class="form-control" type="date" />
            </div>
            <span asp-validation-for="JoinDate" class="text-danger col-3"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="Contact" class="col-form-label col-form-label-sm col-2 text-end"></label>
            <div class="col-4">
                <input asp-for="Contact" class="form-control" type="text" />
            </div>
            <span asp-validation-for="Contact" class="text-danger col-3"></span>
        </div>
        <div class="col-2">
            <button type="submit" title="update" class="btn btn-warning" style="margin-left: 24rem;">Update</button>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/libs/jquery/jquery.js"></script>
    <script src="~/libs/jquery/validate/jquery.validate.js"></script>
    <script src="~/libs/jquery/unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/libs/datepicker/js/bootstrap-datepicker.js"></script>
}
