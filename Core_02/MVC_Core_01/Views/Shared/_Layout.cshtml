<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - My Asp.NetCore Project</title>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="~/libs/bootstrap/js/bootstrap.js"></script>
    <style>
        .body-content {
            min-height: calc(100vh - 150px);            
        }
    </style>
    @await RenderSectionAsync("styles", false)
</head>
<body style="background-color: #cccccc;">
    <nav class="navbar navbar-expand-lg navbar-light bg-warning sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Core-01</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <span class="bi bi-house me-1"></span>Home                            
                        </a>                        
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employees" asp-action="Index">
                            <span class="bi bi-people me-1"></span>
                            Employees
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container-fluid">
        <hr/>
        <footer class="text-center text-muted"> &copy; @DateTime.Now.Year Company, Inc</footer>
    </div>
    @await RenderSectionAsync("scripts", false)

</body>
</html>
